pipeline {
  agent none
  stages {
      
     
  
  stage('Compile') {
    agent {
      label 'slave-01'
    }
    
    steps {
      echo "-----------------------------------------------------------------------------------------------------------------"
      echo "Compile on Slave 01"
      echo "-----------------------------------------------------------------------------------------------------------------"
                    
      sh 'mvn compile'
      
      
    }
  }
  
  stage('Test') {
    agent {
      label 'slave-02'
    }
    
    steps {
      echo "-----------------------------------------------------------------------------------------------------------------"
      echo "Testing on Slave 02"
      echo "-----------------------------------------------------------------------------------------------------------------"
      
                    
          
      sh "mvn test"
      junit '**/target/surefire-reports/*.xml'
      
    }
    
  }
  stage('Reports') {
    agent {
      label 'slave-02'
    }
    
    steps {
      echo "-----------------------------------------------------------------------------------------------------------------"
      echo "Reports on Slave 02"
      echo "-----------------------------------------------------------------------------------------------------------------"
      
      
    }
    post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    cleanWs()
                }
            }
    
  }
}}
